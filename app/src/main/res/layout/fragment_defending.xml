<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DefendingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">

        <!--Top TextView-->
        <TextView
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose type(s)" />

        <!--Buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_type1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Type 1" />

            <Button
                android:id="@+id/button_type2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Type 2" />
        </LinearLayout>

        <!--Cardview-->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/neutral"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_neutral_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/fire"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_fire_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/water"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_water_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/nature"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_nature_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/electric"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_electric_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/earth"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_earth_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/mental"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_mental_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/wind"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_wind_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/digital"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_digital_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/melee"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_melee_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/crystal"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_crystal_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:src="@drawable/toxic"
                            android:layout_height="50dp"
                            android:layout_width="50dp"/>
                        <TextView
                            android:id="@+id/def_toxic_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Bottom textviews-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/text_view_madeby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:text="@string/madeby"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:text="@string/disclaimer"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/refresh_icon"
            android:layout_marginTop="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/refresh"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12dp"
            android:text="Push to clear icons"
            android:gravity="center"/>

    </LinearLayout>

</FrameLayout>